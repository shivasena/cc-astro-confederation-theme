---
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <main
    class="mx-auto flex w-full max-w-7xl flex-auto flex-col justify-center px-6 py-24 sm:py-64 lg:px-8"
  >
    <p class="text-small font-semibold text-accent">404</p>
    <h1 class="mt-4 text-h2 md:text-h1 text-pretty text-dark">
      Page not found
    </h1>
    <p class="mt-6 text-p text-pretty text-dark/70 md:text-h5">
      Sorry, we couldn't find the page you're looking for.
    </p>
    <div class="mt-10">
      <a
        href="/"
        class="text-button font-semibold text-accent hover:text-accent-yellow transition-colors"
        ><span aria-hidden="true">&larr;</span> Back to home</a
      >
    </div>
  </main>
</Layout>
